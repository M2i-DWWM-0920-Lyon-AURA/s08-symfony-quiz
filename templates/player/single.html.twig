{% extends 'base.html.twig' %}

{% block title %}Player - {{ player.name }}{% endblock %}

{% block main %}
<h1>Profil du joueur {{ player.name }}</h1>
<h2>Quiz créés par ce joueur</h2>
<ul class="list-unstyled">

    {% for quiz in player.quizzes %}
        <li>
            {% include 'quiz/preview.html.twig' %}
        </li>
    {% endfor %}

</ul>
{% endblock %}
